{
  "title":{
    "text":  "${title}",
    "style": "{color: #7E97A6; font-size: 20; text-align: center}"
  },
  "bg_colour":  "#FFFFFF",
  "x_legend":{
  	"text": "Days",
    "style": "{color: #164166; font-size: 12px;}"
  },
  "y_legend":{
    "text": "Cumulative",
    "style": "{color: #164166; font-size: 12px;}"
  },
  "y2_legend":{
    "text": "Metric",
    "style": "{color: #164166; font-size: 12px;}"
  },
 
  "elements":[
    {
      "type":      "bar",
      "alpha":     0.5,
      "colour":    "#9933CC",
      "text":      "Total Sales",
      "font-size": 10,
      "values" :   [${col3}]
    },
    {
      "type":      "line_hollow",
      "alpha":     0.5,
      "colour":    "#28A0DC",
      "text":      "Period Sales",
      "font-size": 10,
      "values" :   [${col2}]
    },
    
  ],
 
  "x_axis":{
    "stroke":1,
    "tick_height":10,
    "colour":"#164166",
    "grid_colour":"#818D9D",
    "labels":{
      "colour":"#818D9D",
      "visible": true,
      "steps":  1,
      "labels": [${col1}]
    }
    
   },
 
  "y_axis":{
    "stroke":      4,
    "tick_length": 3,
    "colour":      "#D0D0D0",
    "grid_colour": "#808080",
    "offset":      0,
    "max":         ${max3},
    "min":         ${min3},
    "steps": 1000000
  },
  
  "y2_axis":{
    "stroke":      4,
    "tick_length": 3,
    "colour":      "#164166",
    "grid_colour": "#808080",
    "offset":      0,
    "max":         ${max2},
    "min":         ${min2},
    "steps": 1000000
  },
  "y2_lines":"2",
  "show_y2":"true"
}
