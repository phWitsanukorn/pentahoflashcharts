{
  "title":{
    "text":  "Product Sales by Region (OLAP)",
    "style": "{font-size: 25px; color: #FFB900}"
  },
  "bg_colour":  "#303030",
 
  "y_legend":{
    "text": "USD Sales",
    "style": "{color: #FFFFFF; font-size: 12px;}"
  },
 
  "elements":[
    {
      "type":      "bar",
      "alpha":     0.5,
      "colour":    "#FFB900",
      "text":      "APAC",
      "font-size": 10,
      "values" :   [${col2}]
    },
    {
      "type":      "bar",
      "alpha":     0.5,
      "colour":    "#28A0DC",
      "text":      "EMEA",
      "font-size": 10,
      "values" :   [${col4}]
    },
    {
      "type":      "bar",
      "alpha":     0.5,
      "colour":    "#B90000",
      "text":      "JAPAN",
      "font-size": 10,
      "values" :   [${col6}]
    },
    {
      "type":      "bar",
      "alpha":     0.5,
      "colour":    "#28B900",
      "text":      "NA",
      "font-size": 10,
      "values" :   [${col8}]
    }
  
  ],
 
  "x_axis":{
    "stroke":1,
    "tick_height":10,
    "colour":"#FFFFFF",
    
    "labels":{
      "colour":"#FFFFFF",
      "visible": true,
      "steps":  1,
      "labels": [${col1}]
    }
    
   },
 
  "y_axis":{
    "stroke":      4,
    "tick_length": 3,
    "colour":      "#D0D0D0",
    
    "offset":      0,
    "max":         ${max4},
    "steps": 1000000
  }
}
